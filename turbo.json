{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["packages/*/src/**/*.ts", "packages/*/src/**/*.tsx", "package.json", "tsconfig.json"],
      "outputs": ["dist/**"],
      "outputMode": "new-only"
    },
    "dev": {
      "dependsOn": ["^build"]
    },
    "test": {
      "cache": false
    },
    "test:watch": {
      "cache": false
    },
    "lint": {
      "dependsOn": ["^build"]
    },
    "lint:fix": {
      "dependsOn": ["^build"]
    }
  }
}
